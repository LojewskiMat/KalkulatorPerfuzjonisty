<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="1200dp"
    android:minWidth="1000dp"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Podaj parametry"
        android:textColor="@color/colorText"
        android:gravity="center"/>

    <EditText
        android:id="@+id/editTextWzrost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Podaj Wzrost [m]"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/editTextWaga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Podaj Wagę [kg]"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/editTextTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Podaj Temperaturę"
        android:textSize="20dp"/>


    <Switch
        android:id="@+id/switchPlec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Czy pacjent jest kobietą?"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/editTextPrzeplywKrwi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Podaj przepływ krwi [ml/min]"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/editTextWskaznikSercowy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Podaj wskaźnik sercowy IC [l/min/m^2"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/editTextObjetoscPierwotna"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Podaj objętość pierwotną [ml]"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/editTextRoztworKardio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Podaj obj. roztw. kardioplegicznego [ml]"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/editTextHCT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="HCT [%]"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/editTextHctOczekiwane"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="HCT oczekiwany [%]"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/buttonCountData"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oblicz"
        android:textSize="20dp"/>
</LinearLayout>